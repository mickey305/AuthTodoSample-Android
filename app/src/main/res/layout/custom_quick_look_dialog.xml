<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/layout_quick_look_dialog_frame"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/quick_look_textViewTitle"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation"
            android:padding="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myTextPrimaryColor"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_8"
            android:textSize="@dimen/dp_16"
            android:text="This is non-title." />

        <ScrollView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation">

            <TextView
                android:id="@+id/quick_look_textViewBody"
                android:padding="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:textSize="@dimen/dp_16"
                android:text="This is non-body." />

        </ScrollView>

        <ImageButton
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:tint="@android:color/white"
            android:src="@drawable/ic_cancel"
            android:background="@drawable/oval_negative"
            android:layout_margin="@dimen/dp_24"
            android:elevation="@dimen/floating_button_elevation"
            android:stateListAnimator="@anim/oval_elevation"
            android:id="@+id/quick_look_buttonCancel" />

    </LinearLayout>

</RelativeLayout>