<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/auth_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/myPrimaryColor"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/auth_surface_frame"
            android:background="@color/myPrimaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewAPIAuthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_24"
                android:layout_margin="@dimen/dp_24"
                android:textColor="@color/white"
                android:text="This is title zone"/>

            <RelativeLayout
                android:id="@+id/layout_mycamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:tint="@color/myPrimaryColor"
            android:src="@drawable/ic_camera"
            android:background="@drawable/oval"
            android:layout_margin="@dimen/dp_48"
            android:elevation="@dimen/floating_button_elevation"
            android:stateListAnimator="@anim/oval_elevation"
            android:id="@+id/buttonTake" />

    </LinearLayout>

</FrameLayout>
